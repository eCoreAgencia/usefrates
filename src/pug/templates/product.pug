extends ../layouts/default.pug

block vars
	- var pageTitle = ' Produto'
	- var bodyClass = 'product'

block content
	.container
		section.section__page.section__breadcrumb
			+vtex-controller('<vtex.cmc:breadCrumb />')
				.bread-crumb
					ul
						li
							a(href='https://tactical.vtexcommercestable.com.br/', rel='v:url', property='v:title') Frates
						li
							a(href='https://tactical.vtexcommercestable.com.br/ferramentas-eletricas', rel='v:url', property='v:title') Camisas
						li
							a(href='https://tactical.vtexcommercestable.com.br/ferramentas-eletricas/acessorios', rel='v:url', property='v:title') Acessórios
						li.last
							a(href='https://tactical.vtexcommercestable.com.br/ferramentas-eletricas/acessorios/mandril', rel='v:url', property='v:title') Mandril
		section.section__page.section__product-header
			.product__main
				.product__media
					.product__media-top
						+vtex-controller('<vtex.cmc:ProductImage zoom="on"/>')
							include ../vtexParts/vtexProductImages.pug

				.product__info
					+vtex-controller('<vtex.cmc:productName/>')
						h1
							.fn.productName.Mandril-1-2--com-Chave-Black-Decker CAMISA BÁSICA PRETA
								input#___rc-p-id(type='hidden', value='125')
								input#___rc-p-dv-id(type='hidden', value='22,9')
								input#___rc-p-sku-ids(type='hidden', value='150')
								input#___rc-p-kit-ids(type='hidden', value='')
					.product__price
						.price
							+vtex-controller('<vtex.cmc:skuPrice />')
								.plugin-preco
									.productPrice
										p.descricao-preco
											em.valor-de.price-list-price(style='display: block;')
												| De:
												strong.skuListPrice R$ 189,00
											em.valor-por.price-best-price(style='display: block;')
												| Por:
												strong.skuBestPrice R$ 129,00
											em.valor-dividido.price-installments(style='display: block;')
												span
													span
														| ou
														label.skuBestInstallmentNumber
															| 12
															span.x x
														|  de
													strong
														label.skuBestInstallmentValue R$ 53,32
										p.preco-a-vista.price-cash(style='display: block;')
											| Preço a vista:
											strong.skuPrice R$ 639,90
					.product__group
						.product__skus
							+vtex-controller('<vtex.cmc:skuRichSelection changeImage="1" />')
								.sku-selector-container.sku-selector-container-0
									ul.topic.Tamanho.productid-42999.numopt-6.col-md-8.col-xs-12
										li.specification Tamanho
										li.select.skuList.item-dimension-Tamanho
											span.group_1
												input#42999_Tamanho_1.skuselector-specification-label.input-dimension-Tamanho.sku-selector.skuespec_P.change-image.checked.sku-picked(type='radio', name='42999_Tamanho', dimension='Tamanho', data-value='P', data-dimension='Tamanho', value='P', specification='P', checked='checked')
												label.dimension-Tamanho.espec_1.skuespec_P.skuespec_Tamanho_opcao_P.skuespec_Tamanho_opcao_P(for='42999_Tamanho_1') P
												input#42999_Tamanho_2.skuselector-specification-label.input-dimension-Tamanho.sku-selector.skuespec_M.change-image(type='radio', name='42999_Tamanho', dimension='Tamanho', data-value='M', data-dimension='Tamanho', value='M', specification='M')
												label.dimension-Tamanho.espec_1.skuespec_M.skuespec_Tamanho_opcao_M.skuespec_Tamanho_opcao_M(for='42999_Tamanho_2') M
												input#42999_Tamanho_3.skuselector-specification-label.input-dimension-Tamanho.sku-selector.skuespec_G.change-image(type='radio', name='42999_Tamanho', dimension='Tamanho', data-value='G', data-dimension='Tamanho', value='G', specification='G')
												label.dimension-Tamanho.espec_1.skuespec_G.skuespec_Tamanho_opcao_G.skuespec_Tamanho_opcao_G(for='42999_Tamanho_3') G
												input#42999_Tamanho_4.skuselector-specification-label.input-dimension-Tamanho.sku-selector.skuespec_Gg.change-image(type='radio', name='42999_Tamanho', dimension='Tamanho', data-value='GG', data-dimension='Tamanho', value='GG', specification='Gg')
												label.dimension-Tamanho.espec_1.skuespec_Gg.skuespec_Tamanho_opcao_GG.skuespec_Tamanho_opcao_Gg(for='42999_Tamanho_4') GG
						.product__qtd
							span.product__qtd-title Quantidade
							.product__qtd-wrapper
								button.button.button--minus
									| -
								input.product__qtd-value(type="text" value="1")/
								button.button.button--plus
									| +



					.product__action
						//- include ../../svg/carrinho-tipbar.svg
						+vtex-controller('<vtex.cmc:BuyButton/>')
							a.buy-button.buy-button-ref(target='_top', href="javascript:alert('Por favor, selecione o modelo desejado.');", style='display:block')
								| Comprar
							.portal-notify-me-ref
								.notifyme.sku-notifyme(style='display: none;')
									.notifyme-title-div(style='display: none;')
										h3.notifymetitle.notifyme-title Avise-Me
									form(action='/no-cache/AviseMe.aspx', style='display: none;')
										fieldset.sku-notifyme-form.notifyme-form
											p
												| Para ser avisado da disponibilidade deste Produto, basta preencher os campos abaixo.
											input#notifymeClientName.sku-notifyme-client-name.notifyme-client-name(placeholder='Digite seu nome...', size='20', type='text', name='notifymeClientName', style='display: none;')
											input#notifymeClientEmail.sku-notifyme-client-email.notifyme-client-email(placeholder='Digite seu e-mail...', size='20', type='text', name='notifymeClientEmail', style='display: none;')
											input#notifymeButtonOK.btn-ok.sku-notifyme-button-ok.notifyme-button-ok(value='ok', type='button', name='notifymeButtonOK', style='display: none;')
											input.sku-notifyme-skuid.notifyme-skuid(type='hidden', name='notifymeIdSku', value='', style='display: none;')
									p.notifyme-loading-message(style='display: none')
										span.sku-notifyme-loading.notifyme-loading Carregando...
									fieldset.success(style='display:none;')
										label
											em
												span.sku-notifyme-success.notifyme-success
													| Cadastrado com sucesso, assim que o produto for disponibilizado você receberá um email avisando.
									fieldset.error(style='display: none')
										label
											span.sku-notifyme-error.notifyme-error
					.product__group
						.product__shipping
							.product__shipping-ico
								include ../../svg/icon-truck.svg
							.shipping
								.shipping__info
									p.shipping__txt calcular prazo e valor:
									a(href="http://www.buscacep.correios.com.br/sistemas/buscacep/").shipping__link Não sei meu CEP
								form.shipping__form
									input.shipping__input(type='text', placeholder='CEP')/
									button.button.shipping__button
										| ok
								.shipping__result
						.product__sizes
							a.product__sizes-link
					section.section__page.section__product-description
						.product__description
							section.section__title
								h2.section__title__txt Descrição
									+vtex-controller('<vtex.cmc:productReference/>')
										.productReference.l2545444 2545444
							.product__description-text
								+vtex-controller('<vtex.cmc:ProductDescription />')
									p Lorem ipsum dolor sit amet consectetur, adipisicing elit. Sint voluptates laudantium nesciunt veniam quae in error similique aliquid, magnam voluptas ex eum autem architecto? Consequatur unde animi quae aliquid deserunt.

		section.section__buy-togheter
			.container
				h2.shelf__title
					| Aproveite e compre junto
					include ../../svg/decor.svg
				+vtex-controller('<vtex.cmc:BuyTogether/>')

		section.section__page.section__shelf
				.container
					h2.shelf__title
						| Quem Viu, Viu Também
						include ../../svg/decor.svg
					.shelf.shelf__carousel--full
						+vtex-controller('<vtex:contentPlaceHolder id="Quem Viu"/>')
							.prateleira
								ul
									each val in [1, 2, 3, 4, 5, 6, 7, 8, 9]
										li
											include ../shelves/prateleira
					.section__page.viewmore
						a("/category").viewmore__txt + Veja Mais
block scripts
	script(src='/arquivos/ec-easyzoom.js')
