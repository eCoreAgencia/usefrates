      .header__search-form
        button.btn.btn--search
          i.icon-search
        .js-search-form
          .search-form
            form.search-form__form(action="/busca", method="post")
              .search-form__control
                input.search-form__input(type="search", required='required', autocomplete='off', name="fq", placeholder='Faça uma busca...', onfocus="this.placeholder = ''", onblur="this.placeholder = 'Faça uma busca...'")/
                button.btn.btn--submit
                  i.icon-search
            .search-form__result
      .header__minicart
        .js-minicart
