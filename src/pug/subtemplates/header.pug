  .header__main
    .header__inner
      button.btn.btn--menu
        i.icon-menu
        | menu
      .header__logo
        .logo
          a(href="/")
            include ../../svg/logo.svg
        .logo.logo--white
          a(href="/")
            include ../../svg/logo-white.svg    
